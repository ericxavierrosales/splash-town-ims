{
  "name": "splash-town-ims",
  "productName": "Splash Town POS & IMS",
  "version": "1.0.8",
  "description": "A POS and Inventory Management System for Splash Town Waterpark & Resort store",
  "main": "src/main.js",
  "build": {
    "appId": "com.electron.splash-town-pos-ims"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "rebuild": "electron-rebuild .",
    "lint": "echo \"No linting configured\""
  },
  "repository": "https://github.com/ericxavierrosales/splash-town-ims",
  "keywords": [],
  "author": "eric.x.c.rosales",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ]
      },
      "github_repository": {
        "owner": "ericxavierrosales",
        "name": "splash-town-ims"
      },
      "packagerConfig": {},
      "electronPackagerConfig": {
        "icon": "src/assets/icon/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "splash_town_ims"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ericxavierrosales",
              "name": "splash-town-ims"
            },
            "prerelease": true
          }
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "bcrypt": "^3.0.6",
    "bootstrap": "^4.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.4.1",
    "jquery.hotkeys": "^0.1.0",
    "js-datepicker": "^5.0.2",
    "knockout": "^3.5.0",
    "moment": "^2.24.0",
    "node-gyp": "^5.0.3",
    "node-notifier": "^6.0.0",
    "popper.js": "^1.15.0",
    "python": "0.0.4",
    "sqlite3": "^4.1.0",
    "xlsx": "^0.17.0",
    "update-electron-app": "^1.5.0",
    "electron-is-dev": "^1.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.45",
    "@electron-forge/maker-deb": "^6.0.0-beta.45",
    "@electron-forge/maker-rpm": "^6.0.0-beta.45",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.45",
    "@electron-forge/maker-zip": "^6.0.0-beta.45",
    "@electron-forge/publisher-github": "^6.0.0-beta.45",
    "electron": "6.0.10",
    "electron-rebuild": "^1.8.6"
  }
}
